<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="80dp"
    android:background="#f9fafb"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <androidx.appcompat.widget.Toolbar
        android:layout_width="match_parent"
        android:layout_height="56dp"
        android:id="@+id/toolbar"
        android:elevation="4dp"
        android:background="@color/brown"
        android:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar"
        android:popupTheme="@style/ThemeOverlay.AppCompat.Light">

        <Button
            android:id="@+id/btn_back"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:backgroundTint="@color/brown"
            android:scaleType="fitStart"
            android:textColor="@color/white"
            style="?android:attr/borderlessButtonStyle"
            android:drawableEnd="@drawable/baseline_arrow_back_ios_24"
            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/white"
            android:textSize="30dp"
            android:textStyle="bold"
            android:text="Hair fast gan" />
    </androidx.appcompat.widget.Toolbar>
    <androidx.swiperefreshlayout.widget.SwipeRefreshLayout
        android:id="@+id/swipe_refresh"
        android:layout_below="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ScrollView
            android:layout_centerVertical="true"
            android:layout_width="match_parent"
            android:scrollbars="vertical"
            android:layout_height="match_parent">
            <RelativeLayout
                android:padding="20dp"
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <androidx.cardview.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:backgroundTint="#fdfdea"
                    android:id="@+id/card_view_1"
                    android:layout_marginBottom="15dp"
                    >
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_centerHorizontal="true"
                        android:textSize="12sp"
                        android:gravity="center"
                        android:textColor="#723b13"
                        android:padding="10dp"
                        android:text="@string/hair_fast_gan_note" />
                </androidx.cardview.widget.CardView>

                <GridLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:columnCount="2"
                    android:rowCount="2"
                    android:id="@+id/grid_layout"
                    android:layout_below="@+id/card_view_1"
                    android:layout_centerHorizontal="true"
                    >

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:layout_gravity="center"
                        android:layout_marginBottom="10dp"
                        >
                        <androidx.cardview.widget.CardView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            app:cardCornerRadius="15dp"
                            android:layout_rowWeight="1"
                            android:layout_columnWeight="1"
                            app:cardElevation="0dp"
                            android:layout_margin="5dp"
                            android:foreground="?android:attr/selectableItemBackground"
                            android:id="@+id/your_face_card_view"
                            >
                            <RelativeLayout
                                android:layout_width="160dp"
                                android:layout_height="240dp">

                                <ImageView
                                    android:id="@+id/your_face_img"
                                    android:layout_width="150dp"
                                    android:layout_height="200dp"
                                    android:layout_centerInParent="true"
                                    android:src="@drawable/fb_no_img" />
                            </RelativeLayout>
                        </androidx.cardview.widget.CardView>
                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Your face"
                            android:textSize="16sp"
                            android:gravity="center"
                            android:textColor="#6b7280"
                            android:layout_gravity="center"
                            />
                    </LinearLayout>
                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:layout_gravity="center"
                        android:layout_marginBottom="10dp"
                        >
                        <androidx.cardview.widget.CardView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            app:cardCornerRadius="15dp"
                            android:layout_rowWeight="1"
                            android:layout_columnWeight="1"
                            app:cardElevation="0dp"
                            android:layout_margin="5dp"
                            android:id="@+id/hair_style_card_view"
                            android:foreground="?android:attr/selectableItemBackground"
                            >
                            <RelativeLayout
                                android:layout_width="160dp"
                                android:layout_height="240dp">

                                <ImageView
                                    android:id="@+id/hair_style_img"
                                    android:layout_width="150dp"
                                    android:layout_height="200dp"
                                    android:layout_centerInParent="true"
                                    android:src="@drawable/fb_no_img" />
                            </RelativeLayout>
                        </androidx.cardview.widget.CardView>
                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Hair style"
                            android:textSize="16sp"
                            android:gravity="center"
                            android:textColor="#6b7280"
                            android:id="@+id/hair_style_txt"
                            android:layout_gravity="center"
                            />
                    </LinearLayout>
                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:layout_gravity="center"
                        >
                        <androidx.cardview.widget.CardView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            app:cardCornerRadius="15dp"
                            android:layout_rowWeight="1"
                            android:layout_columnWeight="1"
                            app:cardElevation="0dp"
                            android:layout_margin="5dp"
                            android:id="@+id/hair_color_card_view"
                            android:foreground="?android:attr/selectableItemBackground"
                            >
                            <RelativeLayout
                                android:layout_width="160dp"
                                android:layout_height="240dp">

                                <ImageView
                                    android:id="@+id/hair_color_img"
                                    android:layout_width="150dp"
                                    android:layout_height="200dp"
                                    android:layout_centerInParent="true"
                                    android:src="@drawable/fb_no_img" />
                            </RelativeLayout>
                        </androidx.cardview.widget.CardView>
                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Hair color"
                            android:textSize="16sp"
                            android:gravity="center"
                            android:id="@+id/hair_color_txt"
                            android:textColor="#6b7280"
                            android:layout_gravity="center"
                            />
                    </LinearLayout>
                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:layout_gravity="center"
                        >
                        <androidx.cardview.widget.CardView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            app:cardCornerRadius="15dp"
                            android:layout_rowWeight="1"
                            android:layout_columnWeight="1"
                            app:cardElevation="0dp"
                            android:layout_margin="5dp"
                            android:id="@+id/result_card_view"
                            android:foreground="?android:attr/selectableItemBackground"
                            >
                            <RelativeLayout
                                android:layout_width="160dp"
                                android:layout_height="240dp">

                                <ImageView
                                    android:id="@+id/result_img"
                                    android:layout_width="150dp"
                                    android:layout_height="200dp"
                                    android:layout_centerInParent="true"
                                    android:src="@drawable/fb_no_img" />
                            </RelativeLayout>
                        </androidx.cardview.widget.CardView>
                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="@string/btn_download"
                            android:textSize="16sp"
                            android:gravity="center"
                            android:textColor="#1d4ed8"
                            android:id="@+id/download_txt"
                            android:layout_gravity="center"
                            />
                    </LinearLayout>
                </GridLayout>
                <Button
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/white"
                    android:text="Try now!"
                    android:id="@+id/btn_try_now"
                    android:layout_marginTop="15dp"
                    android:backgroundTint="#046c4e"
                    android:layout_centerHorizontal="true"
                    android:layout_below="@+id/grid_layout"
                    />
            </RelativeLayout>
        </ScrollView>
    </androidx.swiperefreshlayout.widget.SwipeRefreshLayout>
</RelativeLayout>