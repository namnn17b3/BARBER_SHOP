<?xml version="1.0" encoding="utf-8"?>
<androidx.drawerlayout.widget.DrawerLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/drawer_layout"
    android:fitsSystemWindows="true"
    tools:openDrawer="start"
    android:layout_marginBottom="80dp"
    tools:context=".MainActivity">

    <androidx.swiperefreshlayout.widget.SwipeRefreshLayout
        android:id="@+id/swipe_refresh"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <androidx.appcompat.widget.Toolbar
                android:layout_width="match_parent"
                android:layout_height="56dp"
                android:id="@+id/toolbar"
                android:elevation="4dp"
                android:background="@color/brown"
                android:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar"
                android:popupTheme="@style/ThemeOverlay.AppCompat.Light">

                <Button
                    android:id="@+id/btn_filter"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:backgroundTint="@color/brown"
                    android:scaleType="fitStart"
                    android:textColor="@color/white"
                    style="?android:attr/borderlessButtonStyle"
                    android:drawableEnd="@drawable/baseline_filter_alt_24"
                    />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/white"
                    android:textSize="30dp"
                    android:textStyle="bold"
                    android:text="Hair style" />

                <Button
                    android:id="@+id/pagination_menu"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:scaleType="fitStart"
                    android:layout_gravity="end"
                    android:visibility="gone"
                    style="?android:attr/borderlessButtonStyle"
                    android:drawableEnd="@drawable/ellipsis_vertical"
                    />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/white"
                    android:textSize="14sp"
                    android:textStyle="normal"
                    android:layout_gravity="end"
                    android:paddingRight="5dp"
                    android:id="@+id/page_txt"/>
            </androidx.appcompat.widget.Toolbar>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/no_result"
                android:background="@color/white"
                android:orientation="vertical"
                android:layout_centerVertical="true"
                android:visibility="gone"
                android:padding="15dp"
                >
                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:src="@drawable/no_result"
                    android:layout_gravity="center"
                    />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:gravity="center"
                    android:text="No result"
                    android:textSize="18sp" />
            </LinearLayout>

            <androidx.recyclerview.widget.RecyclerView
                android:layout_gravity="center"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="20dp"
                android:paddingHorizontal="20dp"
                android:layout_marginStart="27dp"
                android:gravity="center_horizontal"
                android:id="@+id/list_hair_style"
                android:layout_centerVertical="true"
                android:layout_below="@+id/toolbar"
                android:layout_centerHorizontal="true"
                tools:listitem="@layout/hair_style_item"/>
        </RelativeLayout>
    </androidx.swiperefreshlayout.widget.SwipeRefreshLayout>

    <com.google.android.material.navigation.NavigationView
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:id="@+id/nav_view"
        android:layout_gravity="start">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            >
            <RelativeLayout
                android:layout_marginTop="30dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:paddingLeft="15dp"
                    android:layout_alignParentStart="true"
                    android:layout_centerVertical="true"
                    app:layout_constraintTop_toTopOf="parent"
                    android:text="APPLY FILTERS"
                    android:textColor="#6b7280"
                    android:textSize="25dp"
                    android:textStyle="bold" />

                <Button
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:layout_gravity="center"
                    android:layout_marginStart="47dp"
                    android:layout_alignParentEnd="true"
                    android:layout_centerVertical="true"
                    android:background="@drawable/baseline_close_24"
                    android:gravity="center"
                    android:src="@drawable/close_filter"
                    android:textColor="#6b7280"
                    android:textSize="25dp"
                    android:id="@+id/btn_color_filter"
                    android:textStyle="bold" />

            </RelativeLayout>
            <ScrollView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:scrollbars="vertical"
                >
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical">
                    <SearchView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:id="@+id/hair_style_name_sv"
                        android:queryHint="Search barber name"/>
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Price"
                        android:textSize="25dp"
                        android:textStyle="bold"
                        android:textColor="@color/black"
                        android:layout_marginLeft="15dp"
                        />
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:weightSum="10"
                        android:layout_marginTop="15dp"
                        >
                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:orientation="vertical"
                            android:layout_weight="5"
                            >
                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:text="Min:"
                                android:layout_marginLeft="15dp"
                                android:textSize="18dp"
                                />
                            <EditText
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:inputType="numberSigned"
                                android:text="100000"
                                android:textSize="20sp"
                                android:id="@+id/min_price_edt"
                                android:layout_marginLeft="15dp"
                                />
                        </LinearLayout>
                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:orientation="vertical"
                            android:layout_weight="5"
                            >
                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:text="Max:"
                                android:layout_marginLeft="15dp"
                                android:textSize="18dp"
                                />
                            <EditText
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:inputType="numberSigned"
                                android:text="300000"
                                android:textSize="20sp"
                                android:id="@+id/max_price_edt"
                                android:layout_marginLeft="15dp"
                                />
                        </LinearLayout>
                    </LinearLayout>
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Rating"
                        android:layout_marginTop="10dp"
                        android:textSize="25dp"
                        android:textStyle="bold"
                        android:textColor="@color/black"
                        android:layout_marginLeft="15dp"
                        />
                    <RadioGroup
                        android:id="@+id/rating_radio_group"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dp"
                        android:layout_marginLeft="15dp"
                        android:checkedButton="@id/rating_none_radio_btn"
                        >
                        <RadioButton
                            android:id="@+id/rating_asc_radio_btn"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Ascending"
                            android:textSize="18sp"
                            app:buttonTint="@color/primary"
                            />

                        <RadioButton
                            android:id="@+id/rating_desc_radio_btn"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Descending"
                            android:textSize="18sp"
                            app:buttonTint="@color/primary"
                            />
                        <RadioButton
                            android:id="@+id/rating_none_radio_btn"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="None"
                            android:textSize="18sp"
                            android:checked="true"
                            app:buttonTint="@color/primary"
                            />
                    </RadioGroup>
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Booking"
                        android:layout_marginTop="10dp"
                        android:textSize="25dp"
                        android:textStyle="bold"
                        android:textColor="@color/black"
                        android:layout_marginLeft="15dp"
                        />
                    <RadioGroup
                        android:id="@+id/booking_radio_group"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dp"
                        android:layout_marginLeft="15dp"
                        android:checkedButton="@id/booking_none_radio_btn"
                        >
                        <RadioButton
                            android:id="@+id/booking_asc_radio_btn"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Ascending"
                            android:textSize="18sp"
                            app:buttonTint="@color/primary"
                            />

                        <RadioButton
                            android:id="@+id/booking_desc_radio_btn"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Descending"
                            android:textSize="18sp"
                            app:buttonTint="@color/primary"
                            />
                        <RadioButton
                            android:id="@+id/booking_none_radio_btn"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="None"
                            android:textSize="18sp"
                            android:checked="true"
                            app:buttonTint="@color/primary"
                            />
                    </RadioGroup>
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Priority"
                        android:layout_marginTop="10dp"
                        android:textSize="25dp"
                        android:textStyle="bold"
                        android:textColor="@color/black"
                        android:layout_marginLeft="15dp"
                        />
                    <RadioGroup
                        android:id="@+id/priority_radio_group"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dp"
                        android:layout_marginLeft="15dp"
                        android:checkedButton="@id/priority_none_radio_btn"
                        >
                        <RadioButton
                            android:id="@+id/priority_rating_radio_btn"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Rating"
                            android:textSize="18sp"
                            app:buttonTint="@color/primary"
                            />

                        <RadioButton
                            android:id="@+id/priority_booking_radio_btn"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Booking"
                            android:textSize="18sp"
                            app:buttonTint="@color/primary"
                            />
                        <RadioButton
                            android:id="@+id/priority_none_radio_btn"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="None"
                            android:textSize="18sp"
                            android:checked="true"
                            app:buttonTint="@color/primary"
                            />
                    </RadioGroup>
                    <Button
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="10dp"
                        android:layout_marginLeft="10dp"
                        android:layout_marginTop="25dp"
                        android:height="60dp"
                        android:id="@+id/btn_apply_filter"
                        android:backgroundTint="@color/primary"
                        android:textColor="@color/white"
                        android:text="Filter"
                        android:textSize="20dp"
                        android:layout_marginBottom="15dp"
                        />
                </LinearLayout>
            </ScrollView>
        </LinearLayout>

    </com.google.android.material.navigation.NavigationView>

</androidx.drawerlayout.widget.DrawerLayout>
