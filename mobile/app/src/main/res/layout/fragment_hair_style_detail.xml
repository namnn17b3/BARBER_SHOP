<?xml version="1.0" encoding="utf-8"?>
<androidx.drawerlayout.widget.DrawerLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/drawer_layout"
    android:fitsSystemWindows="true"
    tools:openDrawer="start"
    android:layout_marginBottom="80dp"
    tools:context=".MainActivity">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">
        <androidx.appcompat.widget.Toolbar
            android:layout_width="match_parent"
            android:layout_height="56dp"
            android:id="@+id/toolbar"
            android:elevation="4dp"
            android:background="@color/brown"
            android:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar"
            android:popupTheme="@style/ThemeOverlay.AppCompat.Light">

            <Button
                android:id="@+id/btn_back"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:backgroundTint="@color/brown"
                android:scaleType="fitStart"
                android:textColor="@color/white"
                style="?android:attr/borderlessButtonStyle"
                android:drawableEnd="@drawable/baseline_arrow_back_ios_24"
                />

            <Button
                android:id="@+id/btn_filter"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:backgroundTint="@color/brown"
                android:scaleType="fitStart"
                android:textColor="@color/white"
                style="?android:attr/borderlessButtonStyle"
                android:drawableEnd="@drawable/baseline_filter_alt_24"
                />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/white"
                android:textSize="30dp"
                android:textStyle="bold"
                android:text="Hair style" />

            <Button
                android:id="@+id/pagination_menu"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:scaleType="fitStart"
                android:layout_gravity="end"
                android:visibility="gone"
                style="?android:attr/borderlessButtonStyle"
                android:drawableEnd="@drawable/ellipsis_vertical"
                />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/white"
                android:textSize="14sp"
                android:textStyle="normal"
                android:layout_gravity="end"
                android:paddingRight="5dp"
                android:id="@+id/page_txt"/>
        </androidx.appcompat.widget.Toolbar>
        <androidx.swiperefreshlayout.widget.SwipeRefreshLayout
            android:layout_below="@id/toolbar"
            android:id="@+id/swipe_refresh"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <ScrollView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:scrollbars="vertical"

                >

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical"
                    >
                    <!--                main product -->
                    <RelativeLayout
                        android:id="@+id/cv_11"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_horizontal"
                        android:layout_marginBottom="8dp"
                        android:background="@color/white"
                        android:elevation="3dp"
                        android:padding="20dp">

                        <androidx.cardview.widget.CardView
                            android:id="@+id/cv_a"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="15dp"
                            android:layout_marginBottom="15dp"
                            android:background="@color/white"
                            app:cardCornerRadius="20dp">

                            <com.denzcoskun.imageslider.ImageSlider
                                android:id="@+id/hair_style_imgs"
                                android:layout_width="wrap_content"
                                android:layout_height="300dp"
                                app:iss_auto_cycle="true"
                                app:iss_corner_radius="20"
                                app:iss_delay="1000"
                                app:iss_period="1000"
                                app:iss_title_background="@drawable/default_gradient" />
                        </androidx.cardview.widget.CardView>

                        <androidx.cardview.widget.CardView
                            android:id="@+id/cv_1"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_below="@id/cv_a"
                            android:layout_marginTop="5dp"
                            android:backgroundTint="#dbeafe"
                            app:cardCornerRadius="5dp">

                            <TextView
                                android:id="@+id/discount_txt"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:padding="3dp"
                                android:textColor="#1e40af"
                                android:textSize="14sp"
                                android:textStyle="bold" />
                        </androidx.cardview.widget.CardView>

                        <androidx.cardview.widget.CardView
                            android:id="@+id/cv_12"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_below="@id/cv_a"
                            android:layout_toEndOf="@+id/cv_1"
                            android:layout_marginTop="5dp"
                            android:layout_marginStart="20dp"
                            android:backgroundTint="#f3faf7"
                            app:cardCornerRadius="5dp">

                            <TextView
                                android:id="@+id/active_txt"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:padding="3dp"
                                android:text="Active"
                                android:textColor="#03543f"
                                android:textSize="14sp"
                                android:textStyle="bold" />
                        </androidx.cardview.widget.CardView>

                        <TextView
                            android:id="@+id/hair_style_name"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_below="@id/cv_1"
                            android:layout_marginTop="5dp"
                            android:gravity="start"
                            android:textColor="@color/black"
                            android:textSize="30dp"
                            android:textStyle="bold" />

                        <ImageView
                            android:id="@+id/img_1"
                            android:layout_width="20dp"
                            android:layout_height="20dp"
                            android:layout_below="@+id/hair_style_name"
                            android:src="@drawable/baseline_star_24_1" />

                        <TextView
                            android:id="@+id/rating_txt"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_below="@+id/hair_style_name"
                            android:layout_marginStart="3dp"
                            android:layout_toEndOf="@+id/img_1"
                            android:textColor="#111827"
                            android:textSize="14sp" />

                        <TextView
                            android:id="@+id/booking_txt"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_below="@+id/hair_style_name"
                            android:layout_marginStart="3dp"
                            android:layout_toEndOf="@+id/rating_txt"
                            android:textColor="#6b7280"
                            android:textSize="14sp" />

                        <TextView
                            android:id="@+id/price_txt"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_below="@id/img_1"
                            android:layout_marginTop="13dp"
                            android:textColor="@color/black"
                            android:textSize="25dp"
                            android:textStyle="bold" />

                        <Button
                            android:id="@+id/btn_booking"
                            android:layout_width="117dp"
                            android:layout_height="wrap_content"
                            android:layout_below="@id/img_1"
                            android:layout_marginStart="121dp"
                            android:layout_marginTop="3dp"
                            android:layout_toEndOf="@+id/price_txt"
                            android:backgroundTint="@color/primary"
                            android:text="Booking"
                            android:textSize="14sp" />

                        <View
                            android:layout_width="match_parent"
                            android:layout_height="2dp"
                            android:background="#d1d5db"
                            android:layout_marginTop="15dp"
                            android:layout_marginBottom="15dp"
                            android:layout_below="@id/btn_booking"
                            android:id="@+id/hr_view1"
                            />

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:id="@+id/hair_style_description"
                            android:layout_below="@id/hr_view1"
                            android:textColor="#6b7280"
                            android:textSize="20sp"
                            />
                    </RelativeLayout>

                    <!--                brick hr-->
                    <View
                        android:layout_width="match_parent"
                        android:layout_height="3dp"
                        android:background="#d1d5db"
                        android:layout_marginTop="15dp"
                        android:layout_marginBottom="20dp"
                        android:layout_below="@id/cv_11"
                        android:id="@+id/hr_view"
                        />

                    <!--                Statistic review-->
                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:id="@+id/statistic_review_layout"
                        android:background="@color/white"
                        android:paddingStart="15dp"
                        android:paddingTop="20dp"
                        android:paddingBottom="20dp"
                        >
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Reviews"
                            android:textStyle="bold"
                            android:textSize="30dp"
                            android:id="@+id/review_title_txt"
                            />

                        <ImageView
                            android:id="@+id/img_11"
                            android:layout_width="20dp"
                            android:layout_height="50dp"
                            android:layout_marginLeft="10dp"
                            android:layout_toEndOf="@+id/review_title_txt"
                            android:src="@drawable/baseline_star_24_1" />
                        <TextView
                            android:id="@+id/statistic_rating_txt"
                            android:layout_width="wrap_content"
                            android:layout_height="50dp"
                            android:layout_marginStart="3dp"
                            android:layout_toEndOf="@+id/img_11"
                            android:textColor="#111827"
                            android:gravity="center_vertical"
                            android:textSize="18sp" />

                        <TextView
                            android:id="@+id/statistic_booking_txt"
                            android:layout_width="wrap_content"
                            android:layout_height="50dp"
                            android:layout_marginStart="3dp"
                            android:layout_toEndOf="@+id/statistic_rating_txt"
                            android:textColor="#6b7280"
                            android:gravity="center_vertical"
                            android:textSize="18sp" />

                        <TextView
                            android:id="@+id/avg_star_txt"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="10dp"
                            android:textSize="25dp"
                            android:textStyle="bold"
                            android:layout_below="@+id/review_title_txt"
                            />

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_below="@id/avg_star_txt"
                            android:layout_marginTop="10dp"
                            android:orientation="vertical"
                            >
                            <LinearLayout
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:orientation="horizontal"
                                android:layout_gravity="start"
                                >
                                <TextView
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:text="1"
                                    android:layout_gravity="center"
                                    android:textColor="#111827"
                                    android:textSize="18sp"
                                    android:id="@+id/star1_txt"
                                    />
                                <ImageView
                                    android:layout_width="15dp"
                                    android:layout_height="15dp"
                                    android:layout_gravity="center"
                                    android:src="@drawable/baseline_star_24_1"
                                    android:layout_marginEnd="10dp"
                                    />
                                <ProgressBar
                                    android:layout_width="270dp"
                                    android:layout_height="5dp"
                                    android:id="@+id/progress_star1"
                                    android:layout_gravity="center"
                                    style="?android:attr/progressBarStyleHorizontal"
                                    android:progressDrawable="@drawable/custom_progress_bg"
                                    />
                                <TextView
                                    android:id="@+id/quantity_star1_txt"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_gravity="center"
                                    android:gravity="center"
                                    android:text="158"
                                    android:layout_marginStart="10dp"
                                    android:textColor="#1d4ed8"
                                    android:textSize="18sp" />
                            </LinearLayout>
                            <LinearLayout
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:orientation="horizontal"
                                android:layout_gravity="start"
                                >
                                <TextView
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:text="2"
                                    android:layout_gravity="center"
                                    android:textColor="#111827"
                                    android:textSize="18sp"
                                    android:id="@+id/star2_txt"
                                    />
                                <ImageView
                                    android:layout_width="15dp"
                                    android:layout_height="15dp"
                                    android:layout_gravity="center"
                                    android:src="@drawable/baseline_star_24_1"
                                    android:layout_marginEnd="10dp"
                                    />
                                <ProgressBar
                                    android:layout_width="270dp"
                                    android:layout_height="5dp"
                                    android:id="@+id/progress_star2"
                                    android:layout_gravity="center"
                                    style="?android:attr/progressBarStyleHorizontal"
                                    android:progressDrawable="@drawable/custom_progress_bg"
                                    />
                                <TextView
                                    android:id="@+id/quantity_star2_txt"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_gravity="center"
                                    android:gravity="center"
                                    android:text="158"
                                    android:layout_marginStart="10dp"
                                    android:textColor="#1d4ed8"
                                    android:textSize="18sp" />
                            </LinearLayout>
                            <LinearLayout
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:orientation="horizontal"
                                android:layout_gravity="start"
                                >
                                <TextView
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:text="3"
                                    android:layout_gravity="center"
                                    android:textColor="#111827"
                                    android:textSize="18sp"
                                    android:id="@+id/star3_txt"
                                    />
                                <ImageView
                                    android:layout_width="15dp"
                                    android:layout_height="15dp"
                                    android:layout_gravity="center"
                                    android:src="@drawable/baseline_star_24_1"
                                    android:layout_marginEnd="10dp"
                                    />
                                <ProgressBar
                                    android:layout_width="270dp"
                                    android:layout_height="5dp"
                                    android:id="@+id/progress_star3"
                                    android:layout_gravity="center"
                                    style="?android:attr/progressBarStyleHorizontal"
                                    android:progressDrawable="@drawable/custom_progress_bg"
                                    />
                                <TextView
                                    android:id="@+id/quantity_star3_txt"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_gravity="center"
                                    android:gravity="center"
                                    android:text="158"
                                    android:layout_marginStart="10dp"
                                    android:textColor="#1d4ed8"
                                    android:textSize="18sp" />
                            </LinearLayout>
                            <LinearLayout
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:orientation="horizontal"
                                android:layout_gravity="start"
                                >
                                <TextView
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:text="4"
                                    android:layout_gravity="center"
                                    android:textColor="#111827"
                                    android:textSize="18sp"
                                    android:id="@+id/star4_txt"
                                    />
                                <ImageView
                                    android:layout_width="15dp"
                                    android:layout_height="15dp"
                                    android:layout_gravity="center"
                                    android:src="@drawable/baseline_star_24_1"
                                    android:layout_marginEnd="10dp"
                                    />
                                <ProgressBar
                                    android:layout_width="270dp"
                                    android:layout_height="5dp"
                                    android:id="@+id/progress_star4"
                                    android:layout_gravity="center"
                                    style="?android:attr/progressBarStyleHorizontal"
                                    android:progressDrawable="@drawable/custom_progress_bg"
                                    />
                                <TextView
                                    android:id="@+id/quantity_star4_txt"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_gravity="center"
                                    android:gravity="center"
                                    android:text="158"
                                    android:layout_marginStart="10dp"
                                    android:textColor="#1d4ed8"
                                    android:textSize="18sp" />
                            </LinearLayout>
                            <LinearLayout
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:orientation="horizontal"
                                android:layout_gravity="start"
                                >
                                <TextView
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:text="5"
                                    android:layout_gravity="center"
                                    android:textColor="#111827"
                                    android:textSize="18sp"
                                    android:id="@+id/star5_txt"
                                    />
                                <ImageView
                                    android:layout_width="15dp"
                                    android:layout_height="15dp"
                                    android:layout_gravity="center"
                                    android:src="@drawable/baseline_star_24_1"
                                    android:layout_marginEnd="10dp"
                                    />
                                <ProgressBar
                                    android:layout_width="270dp"
                                    android:layout_height="5dp"
                                    android:id="@+id/progress_star5"
                                    android:layout_gravity="center"
                                    style="?android:attr/progressBarStyleHorizontal"
                                    android:progressDrawable="@drawable/custom_progress_bg"
                                    />
                                <TextView
                                    android:id="@+id/quantity_star5_txt"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_gravity="center"
                                    android:gravity="center"
                                    android:text="158"
                                    android:layout_marginStart="10dp"
                                    android:textColor="#1d4ed8"
                                    android:textSize="18sp" />
                            </LinearLayout>
                        </LinearLayout>
                    </RelativeLayout>

                    <!--                no result-->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:id="@+id/no_result"
                        android:background="@color/white"
                        android:orientation="vertical"
                        android:layout_centerVertical="true"
                        android:visibility="gone"
                        android:padding="15dp"
                        >
                        <ImageView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:src="@drawable/no_result"
                            android:layout_gravity="center"
                            />

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:gravity="center"
                            android:text="No review"
                            android:textSize="18sp" />
                    </LinearLayout>

                    <!--                List review-->
                    <androidx.recyclerview.widget.RecyclerView
                        android:layout_gravity="center_horizontal"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:gravity="center_horizontal"
                        android:id="@+id/list_review"
                        android:layout_centerVertical="true"
                        android:layout_centerHorizontal="true"
                        android:layout_below="@+id/statistic_review_layout"
                        tools:listitem="@layout/review_item"/>
                </LinearLayout>
            </ScrollView>
        </androidx.swiperefreshlayout.widget.SwipeRefreshLayout>
    </RelativeLayout>

    <com.google.android.material.navigation.NavigationView
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:id="@+id/nav_view"
        android:layout_gravity="start">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            >
            <RelativeLayout
                android:layout_marginTop="30dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:paddingLeft="15dp"
                    android:layout_alignParentStart="true"
                    android:layout_centerVertical="true"
                    app:layout_constraintTop_toTopOf="parent"
                    android:text="FILTER REVIEWS"
                    android:textColor="#6b7280"
                    android:textSize="25dp"
                    android:textStyle="bold" />

                <Button
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:layout_gravity="center"
                    android:layout_marginStart="47dp"
                    android:layout_alignParentEnd="true"
                    android:layout_centerVertical="true"
                    android:background="@drawable/baseline_close_24"
                    android:gravity="center"
                    android:src="@drawable/close_filter"
                    android:textColor="#6b7280"
                    android:textSize="25dp"
                    android:id="@+id/btn_color_filter"
                    android:textStyle="bold" />

            </RelativeLayout>
            <ScrollView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:scrollbars="vertical"
                >
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical">

                    <!--                    Your review if login-->
                    <CheckBox
                        android:id="@+id/your_feedback_chkb"
                        android:text="Your Feedback"
                        android:textSize="25dp"
                        android:layout_marginLeft="10dp"
                        android:layout_marginBottom="15dp"
                        app:buttonTint="@color/primary"
                        android:textStyle="bold"
                        android:visibility="gone"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Feedback Time"
                        android:textSize="25dp"
                        android:textStyle="bold"
                        android:textColor="@color/black"
                        android:layout_marginLeft="15dp"
                        />
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:weightSum="10"
                        android:layout_marginTop="15dp"
                        >
                        <Button
                            android:id="@+id/btn_start_date"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Start date"
                            android:layout_weight="5"
                            android:textSize="18sp"
                            android:textColor="@color/black"
                            style="?android:spinnerStyle"
                            android:layout_marginTop="10dp"/>
                        <Button
                            android:id="@+id/btn_end_date"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="End date"
                            android:textSize="18sp"
                            android:layout_weight="5"
                            android:textColor="@color/black"
                            style="?android:spinnerStyle"
                            android:layout_marginTop="10dp"/>
                    </LinearLayout>

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Star"
                        android:textSize="25dp"
                        android:textStyle="bold"
                        android:textColor="@color/black"
                        android:layout_marginLeft="15dp"
                        />
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:weightSum="10"
                        android:layout_marginTop="15dp"
                        >
                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:orientation="vertical"
                            android:layout_weight="5"
                            >
                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:text="Min:"
                                android:layout_marginLeft="15dp"
                                android:textSize="18dp"
                                />
                            <EditText
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:inputType="numberSigned"
                                android:text="1"
                                android:textSize="20sp"
                                android:id="@+id/min_star_edt"
                                android:layout_marginLeft="15dp"
                                />
                        </LinearLayout>
                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:orientation="vertical"
                            android:layout_weight="5"
                            >
                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:text="Max:"
                                android:layout_marginLeft="15dp"
                                android:textSize="18dp"
                                />
                            <EditText
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:inputType="numberSigned"
                                android:text="5"
                                android:textSize="20sp"
                                android:id="@+id/max_star_edt"
                                android:layout_marginLeft="15dp"
                                />
                        </LinearLayout>
                    </LinearLayout>

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Rating"
                        android:layout_marginTop="10dp"
                        android:textSize="25dp"
                        android:textStyle="bold"
                        android:textColor="@color/black"
                        android:layout_marginLeft="15dp"
                        />
                    <RadioGroup
                        android:id="@+id/rating_radio_group"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dp"
                        android:layout_marginLeft="15dp"
                        android:checkedButton="@id/rating_none_radio_btn"
                        >
                        <RadioButton
                            android:id="@+id/rating_asc_radio_btn"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Ascending"
                            android:textSize="18sp"
                            app:buttonTint="@color/primary"
                            />

                        <RadioButton
                            android:id="@+id/rating_desc_radio_btn"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Descending"
                            android:textSize="18sp"
                            app:buttonTint="@color/primary"
                            />
                        <RadioButton
                            android:id="@+id/rating_none_radio_btn"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="None"
                            android:textSize="18sp"
                            android:checked="true"
                            app:buttonTint="@color/primary"
                            />
                    </RadioGroup>

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Date"
                        android:layout_marginTop="10dp"
                        android:textSize="25dp"
                        android:textStyle="bold"
                        android:textColor="@color/black"
                        android:layout_marginLeft="15dp"
                        />
                    <RadioGroup
                        android:id="@+id/date_radio_group"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dp"
                        android:layout_marginLeft="15dp"
                        android:checkedButton="@id/date_none_radio_btn"
                        >
                        <RadioButton
                            android:id="@+id/date_desc_radio_btn"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Most recent"
                            android:textSize="18sp"
                            app:buttonTint="@color/primary"
                            />

                        <RadioButton
                            android:id="@+id/date_asc_radio_btn"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Latest"
                            android:textSize="18sp"
                            app:buttonTint="@color/primary"
                            />
                        <RadioButton
                            android:id="@+id/date_none_radio_btn"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="None"
                            android:textSize="18sp"
                            android:checked="true"
                            app:buttonTint="@color/primary"
                            />
                    </RadioGroup>

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Priority"
                        android:layout_marginTop="10dp"
                        android:textSize="25dp"
                        android:textStyle="bold"
                        android:textColor="@color/black"
                        android:layout_marginLeft="15dp"
                        />
                    <RadioGroup
                        android:id="@+id/priority_radio_group"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dp"
                        android:layout_marginLeft="15dp"
                        android:checkedButton="@id/priority_none_radio_btn"
                        >
                        <RadioButton
                            android:id="@+id/priority_rating_radio_btn"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Rating"
                            android:textSize="18sp"
                            app:buttonTint="@color/primary"
                            />

                        <RadioButton
                            android:id="@+id/priority_date_radio_btn"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Date"
                            android:textSize="18sp"
                            app:buttonTint="@color/primary"
                            />
                        <RadioButton
                            android:id="@+id/priority_none_radio_btn"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="None"
                            android:textSize="18sp"
                            android:checked="true"
                            app:buttonTint="@color/primary"
                            />
                    </RadioGroup>

                    <Button
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="10dp"
                        android:layout_marginLeft="10dp"
                        android:layout_marginTop="25dp"
                        android:height="60dp"
                        android:id="@+id/btn_apply_filter"
                        android:backgroundTint="@color/primary"
                        android:textColor="@color/white"
                        android:text="Filter"
                        android:textSize="20dp"
                        android:layout_marginBottom="15dp"
                        />
                </LinearLayout>
            </ScrollView>
        </LinearLayout>

    </com.google.android.material.navigation.NavigationView>
</androidx.drawerlayout.widget.DrawerLayout>
