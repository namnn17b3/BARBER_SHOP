<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="300dp"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:elevation="3dp"
    android:layout_margin="8dp"
    android:padding="20dp"
    android:foreground="?android:attr/selectableItemBackground"
    android:layout_gravity="center_horizontal"
    android:background="@drawable/corner_bg">

    <ImageView
        android:id="@+id/hair_style_img"
        android:layout_width="350dp"
        android:layout_height="400dp"
        android:layout_marginTop="5dp"
        />

    <androidx.cardview.widget.CardView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:cardCornerRadius="5dp"
        android:backgroundTint="#dbeafe"
        android:id="@+id/cv_1"
        android:layout_marginTop="5dp"
        android:layout_below="@id/hair_style_img"
        >
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Discount 10.000 đ"
            android:textSize="14sp"
            android:textStyle="bold"
            android:padding="3dp"
            android:id="@+id/discount_txt"
            android:textColor="#1e40af"/>
    </androidx.cardview.widget.CardView>

    <TextView
        android:id="@+id/hair_style_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/cv_1"
        android:layout_marginTop="5dp"
        android:text="Text View"
        android:gravity="start"
        android:textSize="30dp"
        android:textColor="@color/black"
        android:textStyle="bold" />

    <ImageView
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:id="@+id/img_1"
        android:layout_below="@+id/hair_style_name"
        android:src="@drawable/baseline_star_24_1" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/hair_style_name"
        android:layout_toEndOf="@+id/img_1"
        android:text="(2.9) |"
        android:id="@+id/rating_txt"
        android:layout_marginStart="3dp"
        android:textColor="#111827"
        android:textSize="14sp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/hair_style_name"
        android:layout_toEndOf="@+id/rating_txt"
        android:text="(753) booking"
        android:id="@+id/booking_txt"
        android:layout_marginStart="3dp"
        android:textColor="#6b7280"
        android:textSize="14sp" />

    <TextView
        android:id="@+id/price_txt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/img_1"
        android:layout_marginTop="13dp"
        android:text="100.000 đ"
        android:textColor="@color/black"
        android:textSize="25dp"
        android:textStyle="bold" />

    <Button
        android:id="@+id/btn_booking"
        android:layout_width="117dp"
        android:layout_height="wrap_content"
        android:layout_below="@id/img_1"
        android:layout_marginStart="27dp"
        android:layout_marginTop="6dp"
        android:layout_toEndOf="@+id/price_txt"
        android:backgroundTint="@color/primary"
        android:text="Booking"
        android:textSize="14sp" />

</RelativeLayout>